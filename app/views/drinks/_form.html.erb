<%= show_errors_for(drink)%>
<%= form_for drink do |f| %>
<%= f.label :name, "Drink Name" %>
<%= f.text_field :name %>
<%= f.label :ingredients, "Ingredients" %>
<%= f.text_field :ingredients %>
<%= f.label :price, "Drink Price" %>
<%= f.text_field :price %>
<%= f.label :quantity, "Quantity" %>
<%= f.text_field :quantity %>
<%= f.submit %>
<% end %>