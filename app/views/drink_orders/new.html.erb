<%= show_errors_for(@order) %>
<%= form_for @order do |f| %>

<p><%= f.collection_select :user_id, current_user.drinks, :id, :name %></p>

<p><%= f.collection_select :drink_id, Drink.all, :id, :name %></p>

<p><%= f.label :drink_id %></p>
<p><%= f.text_field :drink_id %></p>

<p><%= f.label :special_instructions %></p>
<p><%= f.text_field :special_instructions %></p>

<p><%= f.label :quantity %></p>
<p><%= f.number_field :quantity %></p>

<%= f.submit %>
<% end %>

